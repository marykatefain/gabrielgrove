{% extends "base.njk" %}

{% block title %}
  Contact
{% endblock %}

{% block content %}
<div class="contact-block">
  <h2>Contact</h2>
  <h3>Let's grab coffee!</h3>
  <p>I'm always happy to chat with people looking to connect over professional opportunities or serving the community:</p>
</div>

  <form action="https://formspree.io/ggrove775@gmail.com" method="POST" class="contact">
    <label for="fname">First Name</label>
    <input type="text" id="fname" name="firstname" placeholder=" Your name">

    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="lastname" placeholder=" Your last name">

    <label for="lname">Email</label>
    <input type="email" id="email" name="email" placeholder=" Your email">

    <label for="subject">Subject</label>
    <textarea id="subject" name="subject" rows="12"></textarea>

    <input type="submit" value="Send" class="submit">

  </form>

{% endblock %}
